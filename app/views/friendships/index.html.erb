<!--
	Show current user friends		
-->

<%= render 'layouts/top'%>
<br><br>

<% @friendships.each do |friendship| %>
 
    	<% if current_user.id == friendship.friend.id %>
    	
	    	<%= link_to friendship.user.email, user_path(friendship.user_id) %> 
	    	<%= button_to "remove", friendship, :method => :delete %>
    	
    	<% else %>
    	
    	<%= link_to friendship.friend.email, user_path(friendship.friend_id) %>
    	<%= button_to "remove", friendship, :method => :delete %>

    	<% end %>

<% end %>
